---
const { url } = Astro.props;
interface Props {
  url: string;
}
const linkClass =
  "inline-flex h-10 w-10 items-center justify-center gap-x-2 rounded-md border border-transparent text-sm font-bold bg-neutral-300 text-neutral-100 outline-none ring-zinc-200 hover:bg-neutral-50/10 focus:outline-none focus-visible:ring focus-visible:ring-zinc-500 dark:ring-zinc-200 dark:hover:bg-neutral-50/10";
---

<a class={linkClass} href={url} target="_blank" rel="noopener noreferrer">
  <slot />
</a>
